<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.CriticalViewController"
            prefWidth="800.0" prefHeight="600.0">

    <!-- TOP: Titel -->
    <top>
        <Label text="Kritisk Information"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: red;"/>
    </top>

    <!-- CENTER: Liste med kritisk info -->
    <center>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>

                <!-- Liste -->
                <ListView fx:id="criticalListView"
                          prefHeight="350"
                          prefWidth="600"/>

                <!-- Inputfelt -->
                <HBox spacing="10">
                    <children>
                        <TextField fx:id="criticalInputField"
                                   promptText="Skriv kritisk info..."
                                   prefWidth="400"/>
                        <Button text="Tilføj"
                                onAction="#handleAddCritical"/>
                    </children>
                </HBox>

                <!-- Knapper til redigering -->
                <HBox spacing="10">
                    <children>
                        <Button text="Gem ændring"
                                onAction="#handleEditCritical"/>

                        <Button text="Slet valgt"
                                onAction="#handleDeleteCritical"/>
                    </children>
                </HBox>

            </children>
        </VBox>
    </center>

    <!-- BUND: Tilbage-knap -->
    <bottom>
        <Button text="Tilbage"
                onAction="#handleBackButton"
                prefWidth="120" prefHeight="40"
                BorderPane.alignment="CENTER"/>
    </bottom>

</BorderPane>