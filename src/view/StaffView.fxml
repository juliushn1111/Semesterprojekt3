<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx/20.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.StaffViewController">

    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <!-- OVERSKRIFT -->
    <Label text="Redigér bemanding"
           style="-fx-font-size: 26px; -fx-font-weight: bold;"/>

    <!-- TILFØJ PERSONALE -->
    <HBox spacing="10">
        <TextField fx:id="nameField"
                   promptText="Navn"
                   prefWidth="200"/>

        <ComboBox fx:id="roomComboBox"
                  prefWidth="200"/>

        <Button text="Tilføj"
                onAction="#handleAddStaff"/>
    </HBox>

    <!-- LISTE OVER PERSONALE -->
    <ListView fx:id="staffListView"
              prefWidth="500"
              prefHeight="300"/>

    <!-- SLET + TILBAGE -->
    <HBox spacing="20">
        <Button text="Slet valgt"
                onAction="#handleDeleteStaff"/>

        <Button text="Tilbage"
                onAction="#handleBackButton"/>
    </HBox>

</VBox>
