<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0"
            prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.SimpleGUIController">

    <!-- ================== TOP ================== -->
    <top>
        <VBox spacing="15" alignment="CENTER">

            <!-- UGEOVERSIGT -->
            <HBox alignment="CENTER" spacing="40">
                <padding>
                    <Insets top="15" bottom="5" left="20" right="20"/>
                </padding>

                <children>
                    <VBox alignment="TOP_CENTER">
                        <Label style="-fx-font-size:20px;" text="Mandag"/>
                        <Label fx:id="mondayEventLabel"/>
                    </VBox>

                    <VBox alignment="TOP_CENTER">
                        <Label style="-fx-font-size:20px;" text="Tirsdag"/>
                        <Label fx:id="tuesdayEventLabel"/>
                    </VBox>

                    <VBox alignment="TOP_CENTER">
                        <Label style="-fx-font-size:20px;" text="Onsdag"/>
                        <Label fx:id="wednesdayEventLabel"/>
                    </VBox>

                    <VBox alignment="TOP_CENTER">
                        <Label style="-fx-font-size:20px;" text="Torsdag"/>
                        <Label fx:id="thursdayEventLabel"/>
                    </VBox>

                    <VBox alignment="TOP_CENTER">
                        <Label style="-fx-font-size:20px;" text="Fredag"/>
                        <Label fx:id="fridayEventLabel"/>
                    </VBox>
                </children>
            </HBox>

            <!-- STUE + DAG REDIGERING -->
            <HBox alignment="CENTER" spacing="10">
                <children>

                    <Label text="Stue:"/>
                    <ComboBox fx:id="roomComboBox"
                              prefWidth="160"
                              onAction="#handleRoomChange"/>

                    <Button text="+"
                            prefWidth="35"
                            onAction="#handleAddRoom"/>

                    <Button text="-"
                            prefWidth="35"
                            onAction="#handleDeleteRoom"/>

                    <Label text="Dag:"/>
                    <ComboBox fx:id="weekdayComboBox"
                              prefWidth="120"/>

                    <TextField fx:id="weekdayTextField"
                               promptText="Aktivitet pÃ¥ valgt dag"
                               prefWidth="250"/>

                    <Button text="Gem dag"
                            onAction="#handleSaveWeekday"/>

                </children>
            </HBox>

        </VBox>
    </top>

    <!-- ================== VENSTRE: AGENDA ================== -->
    <left>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>

            <children>
                <Button text="AGENDA"
                        style="-fx-font-size: 24px; -fx-font-weight: bold;"
                        onAction="#handleAgendaButton"/>

                <ListView fx:id="agendaListView"
                          prefHeight="600"
                          prefWidth="200"/>
            </children>
        </VBox>
    </left>

    <!-- ================== CENTER ================== -->
    <center>
        <VBox spacing="25">
            <padding>
                <Insets bottom="20" left="20" right="20" top="10"/>
            </padding>

            <!-- BEMANDING -->
            <VBox spacing="10">
                <children>
                    <Label style="-fx-font-size: 22px; -fx-font-weight: bold;"
                           text="BEMANDING LIGE NU"/>
                    <ListView fx:id="staffListView"
                              prefHeight="150"
                              prefWidth="250"/>
                </children>
            </VBox>

            <!-- BÃ˜RN -->
            <VBox spacing="10">
                <children>
                    <Label fx:id="roomTitleLabel"
                           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

                    <ListView fx:id="childrenListView"
                              prefHeight="250"
                              prefWidth="750"/>
                </children>
            </VBox>

        </VBox>
    </center>

    <!-- ================== HÃ˜JRE ================== -->
    <right>
        <VBox spacing="30">
            <padding>
                <Insets bottom="40" left="20" right="20" top="40"/>
            </padding>

            <children>

                <!-- VEJR -->
                <Button onAction="#handleWeatherButton"
                        prefHeight="140"
                        prefWidth="140"
                        style="-fx-font-size: 48px;"
                        text="â˜€"/>

                <!-- PERSONALE -->
                <Button onAction="#handleStaffButton"
                        prefHeight="140"
                        prefWidth="140"
                        style="-fx-font-size: 48px;"
                        text="ðŸ‘¥"/>

                <!-- CRITICAL -->
                <Button onAction="#handleCriticalButton"
                        prefHeight="140"
                        prefWidth="140"
                        style="-fx-font-size: 48px; -fx-text-fill: red;"
                        text="!"/>

                <!-- INFO -->
                <Button onAction="#handleInfoButton"
                        prefHeight="140"
                        prefWidth="140"
                        style="-fx-font-size: 48px;"
                        text="i"/>

            </children>
        </VBox>
    </right>

</BorderPane>
