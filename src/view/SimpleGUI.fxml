<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.SimpleGUIController">

    <!-- ===== TOP: STUER + ADMIN ===== -->
    <top>
        <VBox spacing="10" alignment="CENTER">

            <!-- STUE KNAPPER -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                <FlowPane fx:id="roomButtonPane"
                          hgap="15" vgap="15"
                          alignment="CENTER"
                          prefWrapLength="1000"
                          style="-fx-padding: 10;" />
            </ScrollPane>

            <!-- ADMIN TIL STUER -->
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="newRoomField" promptText="Stuenavn"/>
                <Button text="Opret stue" onAction="#handleAddRoom"/>
                <Button text="Omdøb stue" onAction="#handleRenameRoom"/>
                <Button text="Slet stue" onAction="#handleDeleteRoom"/>
            </HBox>

        </VBox>
    </top>

    <!-- VENSTRE: AGENDA -->
    <left>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>

            <children>
                <Button text="AGENDA"
                        style="-fx-font-size: 24px; -fx-font-weight: bold;"
                        onAction="#handleAgendaButton"/>

                <ListView fx:id="agendaListView"
                          prefHeight="600"
                          prefWidth="200"/>
            </children>
        </VBox>
    </left>

    <!-- CENTER -->
    <center>
        <VBox spacing="25" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="10" />
            </padding>

            <VBox spacing="10">
                <children>
                    <Label style="-fx-font-size: 22px; -fx-font-weight: bold;"
                           text="BEMANDING LIGE NU" />
                    <ListView fx:id="staffListView" prefHeight="150" prefWidth="180"/>
                </children>
            </VBox>

            <VBox spacing="10">
                <children>
                    <Label fx:id="roomTitleLabel"
                           style="-fx-font-size: 22px; -fx-font-weight: bold;"
                           text="Børneoversigt:" />

                    <ListView fx:id="childrenListView"
                              prefHeight="250"
                              prefWidth="750"/>
                </children>
            </VBox>
        </VBox>
    </center>

    <!-- HØJRE -->
    <right>
        <VBox spacing="30" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40" left="20" right="20" top="40" />
            </padding>

            <children>
                <Button onAction="#handleWeatherButton"
                        prefHeight="140" prefWidth="140"
                        style="-fx-font-size: 48px;"
                        text="☀" />

                <Button onAction="#handleCriticalButton"
                        prefHeight="140" prefWidth="140"
                        style="-fx-font-size: 48px; -fx-text-fill: red;"
                        text="!" />

                <Button onAction="#handleInfoButton"
                        prefHeight="140" prefWidth="140"
                        style="-fx-font-size: 48px;"
                        text="i" />
            </children>
        </VBox>
    </right>

</BorderPane>