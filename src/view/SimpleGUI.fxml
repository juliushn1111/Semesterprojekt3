<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>

<FlowPane xmlns="http://javafx.com/javafx/18"
          xmlns:fx="http://javafx.com/fxml/1"
          alignment="CENTER"
          hgap="10.0" vgap="10.0"
          fx:controller="view.SimpleGUIController">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <children>
        <Label text="Barnets navn:"/>
        <TextField fx:id="textField" prefWidth="150.0"/>
        <Button fx:id="button" text="Klik mig" onAction="#handleButtonClick"/>
    </children>
</FlowPane>
