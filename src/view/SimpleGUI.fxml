<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SimpleGUIController">

    <!-- VENSTRE: AGENDA -->
    <left>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <children>
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="AGENDA" />
                <ListView fx:id="agendaListView" prefHeight="600" prefWidth="200" />
            </children>
        </VBox>
    </left>

    <!-- TOP: UGEKALENDER -->
    <top>
        <HBox alignment="CENTER" spacing="40" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="20" right="20" top="20" />
            </padding>
            <children>
                <VBox alignment="TOP_CENTER">
                    <children>
                        <Label style="-fx-font-size:20px;" text="Mandag" />
                        <Label text="UDE DAG" />
                    </children>
                </VBox>
                <VBox alignment="TOP_CENTER">
                    <children>
                        <Label style="-fx-font-size:20px;" text="Tirsdag" />
                        <Label text="KREA DAG" />
                    </children>
                </VBox>
                <VBox alignment="TOP_CENTER">
                    <children>
                        <Label style="-fx-font-size:20px;" text="Onsdag" />
                        <Label text=" " />
                    </children>
                </VBox>
                <VBox alignment="TOP_CENTER">
                    <children>
                        <Label style="-fx-font-size:20px;" text="Torsdag" />
                        <Label text="TUR I SKOVEN" />
                    </children>
                </VBox>
                <VBox alignment="TOP_CENTER">
                    <children>
                        <Label style="-fx-font-size:20px;" text="Fredag" />
                        <Label text="LUCIA" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </top>
    <!-- CENTER: BEMANDING + BØRNEOVERSIGT -->
    <center>
        <VBox spacing="25" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="10" />
            </padding>

            <!-- BEMANDING LIGE NU -->
            <VBox spacing="10">
                <children>
                    <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="BEMANDING LIGE NU" />
                    <HBox spacing="20">

                        <!-- RØD STUE -->
                        <VBox spacing="5">
                            <children>
                                <Label text="Rød stue" />
                                <ListView fx:id="staffListView" prefHeight="150" prefWidth="180" />
                            </children>
                        </VBox>

                        <!-- BLÅ STUE -->
                        <VBox spacing="5">
                            <children>
                                <Label text="Blå stue" />
                                <ListView fx:id="blueRoomStaffListView" prefHeight="150" prefWidth="180" />
                            </children>
                        </VBox>

                        <!-- GUL STUE -->
                        <VBox spacing="5">
                            <children>
                                <Label text="Gul stue" />
                                <ListView fx:id="yellowRoomStaffListView" prefHeight="150" prefWidth="180" />
                            </children>
                        </VBox>

                        <!-- GRØN STUE -->
                        <VBox spacing="5">
                            <children>
                                <Label text="Grøn stue" />
                                <ListView fx:id="greenRoomStaffListView" prefHeight="150" prefWidth="180" />
                            </children>
                        </VBox>

                    </HBox>
                </children>
            </VBox>

            <!-- BØRNEOVERSIGT -->
            <VBox spacing="10">
                <children>
                    <Label fx:id="roomTitleLabel" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Børneoversigt: " />
                    <ListView fx:id="childrenListView" prefHeight="250" prefWidth="750" />
                </children>
            </VBox>

        </VBox>
    </center>

    <!-- HØJRE: IKONER -->
    <right>
        <VBox spacing="30" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40" left="20" right="20" top="40" />
            </padding>
            <children>
                <Button fx:id="weatherButton" onAction="#handleWeatherButton" prefHeight="140" prefWidth="140" style="-fx-font-size: 48px;" text="☀" />

                <Button fx:id="criticalButton" onAction="#handleCriticalButton" prefHeight="140" prefWidth="140" style="-fx-font-size: 48px; -fx-text-fill: red;" text="!" />
                <Button fx:id="infoButton" onAction="#handleInfoButton" prefHeight="140" prefWidth="140" style="-fx-font-size: 48px;" text="i" />
            </children>
        </VBox>
    </right>

</BorderPane>
