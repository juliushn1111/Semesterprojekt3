<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.AgendaViewController">

    <!-- CENTER -->
    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>

            <Label text="AGENDA"
                   style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

            <!-- INPUT FELTER -->
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="timeField"
                           promptText="Tid (fx 09:00)"
                           prefWidth="150"/>

                <TextField fx:id="entryInputField"
                           promptText="Aktivitet"
                           prefWidth="350"/>
            </HBox>

            <!-- KNAPPER -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="TilfÃ¸j"
                        onAction="#handleAddAgenda"/>

                <Button text="Slet valgt"
                        onAction="#handleDeleteAgenda"/>

                <Button text="Tilbage"
                        onAction="#handleBackButton"/>
            </HBox>

            <!-- LISTE -->
            <ListView fx:id="agendaListView"
                      prefWidth="550"
                      prefHeight="350"/>

        </VBox>
    </center>

</BorderPane>
