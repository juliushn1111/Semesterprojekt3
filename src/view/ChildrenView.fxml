<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.ChildrenViewController">

    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>

            <!-- Titel med stuens navn -->
            <Label fx:id="roomLabel"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"
                   text="Børneoversigt"/>

            <!-- Input til nyt barn -->
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="nameField"
                           promptText="Navn"
                           prefWidth="200"/>

                <TextField fx:id="sexField"
                           promptText="Køn (fx Dreng/Pige)"
                           prefWidth="150"/>

                <TextField fx:id="ageField"
                           promptText="Alder (år)"
                           prefWidth="100"/>
            </HBox>

            <!-- Knapper -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Tilføj barn"
                        onAction="#handleAddChild"/>

                <Button text="Slet valgt barn"
                        onAction="#handleDeleteChild"/>

                <Button text="Tilbage"
                        onAction="#handleBackButton"/>
            </HBox>

            <!-- Liste med børn på denne stue -->
            <ListView fx:id="childrenListView"
                      prefWidth="550"
                      prefHeight="350"/>
        </VBox>
    </center>

</BorderPane>
