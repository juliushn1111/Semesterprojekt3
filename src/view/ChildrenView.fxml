<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.ChildrenViewController">

    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>


            <Label fx:id="roomLabel"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"
                   text="Child overview"/>


            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="nameField"
                           promptText="Name"
                           prefWidth="200"/>

                <TextField fx:id="sexField"
                           promptText="Sex (fx Boy/Girl)"
                           prefWidth="150"/>

                <TextField fx:id="ageField"
                           promptText="Age (Year)"
                           prefWidth="100"/>
            </HBox>


            <HBox spacing="10" alignment="CENTER">
                <Button text="Add Child"
                        onAction="#handleAddChild"/>

                <Button text="Delete child"
                        onAction="#handleDeleteChild"/>

                <Button text="Back"
                        onAction="#handleBackButton"/>
            </HBox>

            <ListView fx:id="childrenListView"
                      prefWidth="550"
                      prefHeight="350"/>
        </VBox>
    </center>

</BorderPane>
