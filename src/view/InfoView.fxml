<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.InfoViewController"
            prefWidth="800" prefHeight="600">

    <!-- TOP -->
    <top>
        <Label text="Information for stuen"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
    </top>

    <!-- CENTER -->
    <center>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- LISTE -->
            <ListView fx:id="infoListView"
                      prefWidth="600"
                      prefHeight="250"/>

            <!-- INPUT FELTER -->
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="nameInputField"
                           promptText="Navn (fx pædagog)"
                           prefWidth="200"/>

                <TextField fx:id="infoInputField"
                           promptText="Information"
                           prefWidth="350"/>
            </HBox>

            <!-- KNAPPER -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Tilføj" onAction="#handleAddInfo" prefWidth="120"/>
                <Button text="Redigér" onAction="#handleEditInfo" prefWidth="120"/>
                <Button text="Slet" onAction="#handleDeleteInfo" prefWidth="120"/>
                <Button text="Tilbage" onAction="#handleBackButton" prefWidth="120"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
